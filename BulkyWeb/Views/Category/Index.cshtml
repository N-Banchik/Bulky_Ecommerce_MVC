@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class=" card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="col-6"></div>
        <div class="row p-3 col-6 text-end ">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn text-center btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

        <table class="table shadow table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id" class="btn shadow btn-primary mx-2">
                                    <i class="bi bi-pencil-fill"></i>Edit
                                </a>
                                <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn shadow btn-danger mx-2">
                                    <i class="bi bi-trash3-fill"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>