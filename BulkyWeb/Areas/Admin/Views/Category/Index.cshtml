@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class=" card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="col-6"></div>
        <div class="row p-3 col-6 text-end ">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn text-center btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

        <table id="tblData" class="table shadow table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>DisplayOrder</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/Category.js"></script>
}